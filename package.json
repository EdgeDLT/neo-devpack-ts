{
  "name": "@neo-project/neo-devpack-ts",
  "author": "neo-project",
  "license": "MIT",
  "workspaces": [
    "packages/compiler",
    "packages/framework"
  ],
  "scripts": {
    "config": "pnpm install && dotnet tool restore --tool-manifest ./express/.config/dotnet-tools.json",
    "build": "tsc --build tsconfig.json",
    "run": "node ./packages/compiler/lib/main.js",
    "neoxp-batch": "cd express && dotnet neoxp batch ./nep17.batch --reset",
    "all": "npm run config && npm run build && npm run run && npm run neoxp-batch",
    "clean": "tsc --build tsconfig.json --clean"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.14.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
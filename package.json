{
  "name": "@neo-project/neo-devpack-ts",
  "author": "neo-project",
  "license": "MIT",
  "workspaces": [
    "packages/compiler",
    "packages/framework"
  ],
  "scripts": {
    "config": "npm i && dotnet tool restore --tool-manifest ./express/.config/dotnet-tools.json",
    "build": "npm run config && tsc --build tsconfig.json",
    "neoxp-batch": "cd express && dotnet neoxp batch ./nep17.batch --reset",
    "exec": "node ./src/main.js && npm run neoxp-batch"
  },
  "devDependencies": {
    "@cityofzion/neon-core": "^5.3.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
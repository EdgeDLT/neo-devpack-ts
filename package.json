{
  "name": "@neo-project/neo-devpack-ts",
  "author": "neo-project",
  "license": "MIT",
  "workspaces": [
    "packages/compiler",
    "packages/framework"
  ],
  "scripts": {
    "setup": "npm install && dotnet tool restore --tool-manifest ./express/.config/dotnet-tools.json",
    "build": "tsc --build tsconfig.json",
    "compile": "node ./packages/compiler/lib/main.js",
    "batch-nep17": "cd express && dotnet neoxp batch ./nep17.batch --reset",
    "clean": "tsc --build tsconfig.json --clean",
    "madge": "madge -c  --extensions ts ./packages/compiler/src",
    "test": "mocha"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.16",
    "chai": "^4.3.7",
    "madge": "^6.1.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Compiler",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/compiler/src/main.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "neo-contract",
            "name": "NEO: deploy",
            "request": "launch",
            "program": "${workspaceFolder}/express/out/nep17token.nef",
            "neo-express": "${workspaceFolder}/express/default.neo-express",
            "invocation": "deploy",
            "deploy-signer": "@owen"
        },
        {
            "type": "neo-contract",
            "name": "NEO: transfer",
            "request": "launch",
            "program": "${workspaceFolder}/express/out/nep17token.nef",
            "neo-express": "${workspaceFolder}/express/default.neo-express",
            "checkpoint": "${workspaceFolder}/express/out/nep17-deployed.neoxp-checkpoint",
            "invocation": {
                "operation": "transfer",
                "args": [
                    "@owen",
                    "@alice",
                    10000,
                    null
                ]
            },
            "signers": [
                "@owen"
            ]
        },
        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}
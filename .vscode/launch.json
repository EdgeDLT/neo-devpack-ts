{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Compiler",
            "preLaunchTask": "tsc: watch - tsconfig.json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/compiler/src/main.ts",
            "cwd": "${workspaceFolder}/samples/helloworld",
            "args": [
                "helloworld.ts",
                "-o",
                "express/out"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "neo-contract",
            "name": "NEO: deploy helloworld",
            "request": "launch",
            "program": "${workspaceFolder}/samples/helloworld/out/helloworld.nef",
            "neo-express": "${workspaceFolder}/samples/helloworld/default.neo-express",
            "invocation": "deploy",
            "deploy-signer": "@owen"
        },
        {
            "type": "neo-contract",
            "name": "NEO: deploy nep17",
            "request": "launch",
            "program": "${workspaceFolder}/samples/nep17token/out/nep17token.nef",
            "neo-express": "${workspaceFolder}/samples/nep17token/default.neo-express",
            "invocation": "deploy",
            "deploy-signer": "@owen"
        },

        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}
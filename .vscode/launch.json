{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/compiler/src/main.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program via TS-Node",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/packages/compiler/src/main.ts"
            ]
        },
        {
            "type": "neo-contract",
            "name": "NEO: deploy",
            "request": "launch",
            "program": "${workspaceFolder}/express/out/nep17token.nef",
            "neo-express": "${workspaceFolder}/express/default.neo-express",
            "invocation": "deploy",
            "deploy-signer": "@owen"
        },
        {
            "type": "neo-contract",
            "name": "NEO: transfer",
            "request": "launch",
            "program": "${workspaceFolder}/express/out/nep17token.nef",
            "neo-express": "${workspaceFolder}/express/default.neo-express",
            "checkpoint": "${workspaceFolder}/express/out/nep17-deployed.neoxp-checkpoint",
            "invocation": {
                "operation": "transfer",
                "args": [
                    "@owen",
                    "@alice",
                    10000,
                    null
                ]
            },
            "signers": [
                "@owen"
            ]
        },
    ]
}